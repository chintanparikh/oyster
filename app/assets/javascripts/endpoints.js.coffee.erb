$ ->
  prettyPrint()

  setInterval (->
    first = $('pre')[0]

    if typeof first == 'undefined'
      first = $("#content")

    url = $(first).data('update-path')
  	
    $.ajax
  	  url: url
  	  type: "GET"
  	  success: (response) ->
        content = response.content
        if content != null
          $.each(content, (id, value) ->
            $(value).hide().prependTo("#content").slideDown("slow")
            prettyPrint()
          )

  ), 5000
